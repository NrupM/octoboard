<div class="col s12 page">

  <%= render '/partials/flash_messages' %>

  <%= link_to "Back", user_path(@user) %>

  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, :required => true %>
    </div>
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, :required => true %>
    </div>
    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :job_status, 'Employment Status' %><br />
      <%= f.select :job_status, User.job_statuses.map { |key, value| [key.humanize, key] }, :prompt => "---", :required => true %>
    </div>
    <div class="field">
      <%= f.label :linkedin_url %><br />
      <%= f.text_field :linkedin_url, autofocus: true, placeholder: 'http://' %>
    </div>
    <div class="field">
      <%= f.label :github_url %><br />
      <%= f.text_field :github_url, autofocus: true, placeholder: 'http://' %>
    </div>
    <div class="field">
      <%= f.label :portfolio_url %><br />
      <%= f.text_field :portfolio_url, autofocus: true, placeholder: 'http://' %>
    </div>
    <div class="field">
      <%= f.label :image, 'Image URL' %><br />
      <%= f.text_field :image, autofocus: true, placeholder: 'http://' %>
    </div>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>
</div>

<div class="col l12 center-align">
  <h4><%= greet %>, <%= @user.first_name.upcase %>!</h4>
</div>

<div class="col s12 l12">
  <div class="row">
    <div class="col s12 l4 grey-box goals-height top-row-margin">
      <div class='col s12 center-align'>
        <% if @user.image %>
          <%= image_tag @user.image, :class => 'circle z-depth-5', :id => 'profile-img' %>
        <% end %>
        <br>
        <%= @user.job_status.upcase %>
      </div>
      <div class="col s12">
        <% if @user.goals.count > 0 %>
          <p>APPS PER DAY
            <span class="right teal-theme"><%= @user.goals.first.applications_per_day %></span>
          </p>
        <% else %>
          <p>WHAT ARE YOUR GOALS?
            <span class="right teal-theme"><%= link_to '?', new_goal_path %></span>
          </p>
        <% end %>
        <p>PROFILE COMPLETION <span class="right teal-theme">50%</span></p>
        <p>OCTOPOWER <span class="right teal-theme"><%= @user.octopower %>%</span></p>
      </div>
    </div>
    <div class="col s12 l4 grey-box goals-height top-row-margin">
      APPLICATIONS
    </div>
    <div class="col s12 l3 grey-box goals-height top-row-margin">
      REMINDERS
    </div>
  </div>
</div>

<div class="col s12 l12">
  <div class="row">
    <div class="col s12 l4 grey-box goals-height middle-row-margin">
      GOALS
    </div>
    <div class="col s12 l4 grey-box goals-height middle-row-margin">
      INTERVIEWS
    </div>
    <div class="col s12 l3 grey-box goals-height middle-row-margin">
      CODE CHALLENGES
    </div>
  </div>
</div>

<div class="col s12 l12">
  <div class="row">
    <div class="col s12 l4 goals-height grey-box2">
      RESOURCES
    </div>
    <div class="col s12 l7">
      <div class="col s12 l12 goals-height2 grey-box2">
        QUESTIONS
      </div>
      <div class="col s12 l12 goals-height2 grey-box2">
        BRAIN TEASER
      </div>
    </div>
  </div>
</div>

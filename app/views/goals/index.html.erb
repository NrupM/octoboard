<div class="page">
  <div class="col s12 center-align">
    <h4 id="goals-header"><%= greet %>, <%= @user.first_name.upcase %>!</h4>
  </div>

  <div class="col s12 l12">
    <div class="row">
      <div class="col s12 l4 grey-box goals-height-top top-row-margin">
        <%= render 'partials/profile_box' %>
      </div>
      <div class="col s12 l3 grey-box goals-height-top top-row-margin" id: "applications-box" >
        <%= render 'partials/applications' %>
      </div>
      <div class="col s12 l4 grey-box goals-height-top top-row-margin">
        <p style="border-bottom: 1px solid grey">REMINDER<span class="right">DATE</span></p>
        <% @upcoming_interviews.each do |interview| %>
          <p style="font-size: 0.9em">
            <% if interview.interview_type %>
              <% if interview.interview_type == 'phone' %>
                <i class="fa fa-phone" aria-hidden="true"></i>
              <% elsif interview.interview_type == 'online' %>
                <i class="fa fa-laptop" aria-hidden="true"></i>
              <% else %>
                <i class="fa fa-handshake-o" aria-hidden="true"></i>
              <% end %>
            <% end %>
            <%= link_to interview_path(interview) do %><span style="padding-left: 10px; color: white"><%= interview.job_application.company_name %> Interview</span><% end %><span class="right teal-theme"><%= interview.interview_date.strftime("%m/%d/%y") %></span></p>
        <% end %>

      </div>
    </div>
  </div>

  <div class="col s12 l12">
    <div class="row" id="mid-block">
      <div class="col s12 l4 grey-box goals-height-mid middle-row-margin bottom-margin">
        <%= render 'partials/goals' %>
      </div>
      <div class="col s12 l3 grey-box goals-height-mid middle-row-margin bottom-margin">
        <%= render 'partials/resources_box' %>
      </div>
      <div class="col s12 l4 grey-box goals-height-mid middle-row-margin bottom-margin">
        <%= render 'partials/interview_box' %>
      </div>
    </div>
  </div>

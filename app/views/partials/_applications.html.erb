<% if @user.job_applications.count > 0 %>
  <p>APPLICATIONS<span class="right teal-theme"><%= link_to 'View All', job_applications_path %></span></p>
  <%= pie_chart @applications.group(:application_method).count, library: {backgroundColor: "#171717"}, height: "140px", colors: ["#50E3C2", "#999", "#C66163", "#4caf50", "#26a69a", "#cddc39", "#673ab7"] %>
  <p>PENDING  <span class="teal-theme" style="padding-left: 20px"><%= @pending_count %></span></p>
  <p>APPLIED TO TODAY  <span class="teal-theme" style="padding-left: 20px"><%= @apps_applied_today %></span></p>
<% else %>
  <div class="col s12 center-align">
    <%= link_to 'LOG AN APPLICATION', new_job_application_path, :class => 'waves-effect waves-light btn', :style => "color: white !important; margin-top: 120px" %>
  </div>
<% end %>
